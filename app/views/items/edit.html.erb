<h1>Editing items</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.label :fullMessage %><br />
    <%= f.text_field :fullMessage %>
  </p>
  <p>
    <%= f.label :submitted %><br />
    <%= f.datetime_select :submitted %>
  </p>
  <p>
    <%= f.label :list_id %><br />
    <%= f.text_field :list_id %>
  </p>
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @items %> |
<%= link_to 'Back', items_path %>