<h1>Listing items</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Text</th>
    <th>Fullmessage</th>
    <th>Submitted</th>
    <th>List</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.author %></td>
    <td><%=h item.text %></td>
    <td><%=h item.fullMessage %></td>
    <td><%=h item.submitted %></td>
    <td><%=h item.list %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>