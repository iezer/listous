<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :twitter_id %><br />
    <%= f.text_field :twitter_id %>
  </p>
  <p>
    <%= f.label :last_mention %><br />
    <%= f.text_field :last_mention %>
  </p>
  <p>
    <%= f.label :last_dm %><br />
    <%= f.text_field :last_dm %>
  </p>
  <p>
    <%= f.label :welcomed %><br />
    <%= f.check_box :welcomed %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>